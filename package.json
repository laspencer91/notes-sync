{
  "name": "notes-sync",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -At run build",
    "dev:service": "yarn workspace @notes-sync/service run dev",
    "dev:cli": "yarn workspace @notes-sync/cli run dev",
    "install:cli": "npm install -g ./packages/cli",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "publish": "node scripts/publish.js"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.9.2"
}
